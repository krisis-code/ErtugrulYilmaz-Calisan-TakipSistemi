@model EmployeeManagement.Common.VModels.EmployeeLeaveTypeVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-content">
	<div class="main-content-inner">


		<div class="page-content">
		


			<div class="row">
				<div class="col-xs-12">
					<!-- PAGE CONTENT BEGINS -->
				
					<form class="form-horizontal aside" asp-action="Create">
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<div class="form-group">
							<label class="col-sm-3 control-label no-padding-right" asp-for="Name"> İzin Tipi</label>

							<div class="col-sm-9">
								<input asp-for="Name" type="text" id="form-field-1" placeholder="Tatil Sebebi Türü" class="col-xs-10 col-sm-5" />
								<span asp-validation-for="Name"></span>
							</div>
							<label class="col-sm-3 control-label no-padding-right" asp-for="Name">Sabit Gün Sayısı</label>
							<div class="col-sm-9">
								<input asp-for="DefaultDays" type="number" min="0" max="15" id="form-field-1" placeholder="Sabit Gün Sayısı" class="col-xs-10 col-sm-5" />
								<span asp-validation-for="DefaultDays"></span>
							</div>
						</div>


						<div class="clearfix form-actions">
					<div class="col-md-offset-3 col-md-9">
							
					<input type="submit" value="Create" class="btn btn-info col-xs-3" />
						</div>
						</div>
					</form>
			</div>
		</div>
	</div>
</div>
</div>
@section Scripts{
	<partial name="_ValidationScriptsPartial" />
}