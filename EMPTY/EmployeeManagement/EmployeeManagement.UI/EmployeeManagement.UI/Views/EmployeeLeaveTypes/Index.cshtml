@model IEnumerable<EmployeeManagement.Common.VModels.EmployeeLeaveTypeVM>
@{
    ViewData["Title"] = "EmploueLeaveListView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
	<h3>
		<i class="ace-icon fa fa-angle-double-right"></i>
		Çalışan İzin Takip Listesi
		
			
		
	</h3>
</div><!-- /.page-header -->

<div class="col-6 text-left text-white">
	<a class="btn btn-success"  asp-controller="EmployeeLeaveTypes" asp-action="Create"> Tip Ekle </a>

</div>


<div class="row">
	<div class="col-xs-12">
		<table id="simple-table" class="table  table-bordered table-hover">
			<thead>
				<tr>
					
				
					<th>Liste İsmi</th>
					<th>Oluşturulma Tarihi</th>
					<th>İşlemler</th>
				
				</tr>
			</thead>

			<tbody>
				
			        
					@foreach(var item in Model)
					{
					<tr>
						<td>
						@item.Name
					</td>
						<td>@item.DateCreated.ToString(" dd.MM.yyyy")</td>
					

					
					<td>
						<div class="hidden-sm hidden-xs btn-group">

								<a class="ace-icon fa fa-pencil bigger-120" asp-controller="EmployeeLeaveTypes" asp-action="Edit" asp-route-id="@item.Id"></a>


								
							<a class="ace-icon fa fa-trash-o bigger-120" asp-controller="EmployeeLeaveTypes" asp-action="Create"></a>
								
							<a class="ace-icon fa fa-flag bigger-120" asp-controller="EmployeeLeaveTypes" asp-action="Create"></a>
							
						</div>
						</td>
				

				</tr>
					}
               </tbody>
		</table>
	</div><!-- /.span -->
</div><!-- /.row -->