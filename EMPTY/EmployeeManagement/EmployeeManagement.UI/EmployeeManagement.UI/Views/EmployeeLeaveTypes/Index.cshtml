@model IEnumerable<EmployeeManagement.Common.VModels.EmployeeLeaveTypeVM>
@{
    ViewData["Title"] = "EmploueLeaveListView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
	<h3>
		<i class="ace-icon fa fa-angle-double-right"></i>
		Çalışan İzin Takip Listesi
		
			
		
	</h3>
</div><!-- /.page-header -->

<div class="col-6 text-left text-white">
	<a class="btn btn-success" asp-controller="EmployeeLeaveType" asp-action="Create"> Tip Ekle </a>

</div>


<div class="row">
	<div class="col-xs-12">
		<table id="simple-table" class="table  table-bordered table-hover">
			<thead>
				<tr>
					
				
					<th>Liste İsmi</th>
					<th>Oluşturulma Tarihi</th>
					<th>İşlemler</th>
				
				</tr>
			</thead>

			<tbody>
				<tr>
			        
					@foreach(var item in Model)
					{
						<td>
						@item.Name
					</td>
					<td>@item.DateCreated</td>
					

					<td class="hidden-480">
						<span class="label label-sm label-warning">Expiring</span>
					</td>

					<td>
						<div class="hidden-sm hidden-xs btn-group">
							<button class="btn btn-xs btn-success">
								<i class="ace-icon fa fa-check bigger-120"></i>
							</button>

							<button class="btn btn-xs btn-info">
								<i class="ace-icon fa fa-pencil bigger-120"></i>
							</button>

							<button class="btn btn-xs btn-danger">
								<i class="ace-icon fa fa-trash-o bigger-120"></i>
							</button>

							<button class="btn btn-xs btn-warning">
								<i class="ace-icon fa fa-flag bigger-120"></i>
							</button>
						</div>
						</td>
					}

				</tr>
               </tbody>
		</table>
	</div><!-- /.span -->
</div><!-- /.row -->